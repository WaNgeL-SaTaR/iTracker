<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :status_id, 'Status' %>
    <%= f.collection_select :status_id, Status.all, :id, :description,
      { :include_blank => true},
      {:class => 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :priority_id, 'Priority' %>
    <%= f.collection_select :priority_id, Priority.all, :id, :description,
      { :include_blank => true},
      {:class => 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :epic_id, 'Epic' %>
    <%= f.collection_select :epic_id, Epic.all, :id, :description,
      { :include_blank => true},
      {:class => 'form-control'} %>
  </div>

  <div class="field">
    <%= f.label :header %>
    <%= f.text_field :header %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>


  <div class="form-group">
    <%= f.label :assigned_to, 'Assigned to' %>
    <%= f.collection_select :assigned_to_id, User.all, :id, :name,
      { :include_blank => true},
      {:class => 'form-control'} %>
  </div>


  <div class="field">
    <%= f.label :is_trash %>
    <%= f.check_box :is_trash %>
  </div>

  <div class="field">
    <%= f.label :estimate %>
    <%= f.datetime_select :estimate %>
  </div>

  <div class="field">
    <%= f.label :remaining_estimate %>
    <%= f.datetime_select :remaining_estimate %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
